{
  "compilerOptions": {
    "target": "ES2020",           // Versi JS output, mendukung fitur modern tapi kompatibel Node.js
    "module": "CommonJS",         // Module system Node.js, supaya import/export lancar
    "rootDir": "src",             // Folder source TypeScript
    "outDir": "dist",             // Folder hasil compile JS
    "strict": true,               // Aktifkan strict type checking, lebih aman
    "esModuleInterop": true,      // Biar bisa import default dari CommonJS library (misal express)
    "skipLibCheck": true          // Lewati pengecekan type di node_modules supaya compile lebih cepat
  },
  "include": ["src/**/*"],         // Semua file di folder src/ akan di-compile
  "exclude": ["node_modules"]      // Node_modules tidak di-compile
}
